<div class="jumbotron text-center">
    <h1 class="display-3">Payment Information</h1>
    <a href="<%=payments_path%>" class="large-link">Back to List</a>
</div>

<div class="container text-center">
    <table class="table" summary="Member detail view">
        <tr>
            <th>Member Name</th>
            <td><%= @payment.member.name %></td>
        </tr>
        <tr>
            <th>Semester</th>
            <td><%= @payment.semester.semester_name %></td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>$<%= @payment.payment_amount %></td>
        </tr>
        <tr>
            <th>Date</th>
            <td><%= @payment.payment_date.strftime("%B %d, %Y") %></td>
        </tr>
    </table>
</div>
