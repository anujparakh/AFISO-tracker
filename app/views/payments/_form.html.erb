<table class="table" summary="Subject form fields">
    <tr>
        <th class="align-middle">Amount</th>
        <td><%= f.text_field(:payment_amount, :class => "form-control w-auto m-auto") %></td>
    </tr>
    <tr>
        <th class="align-middle">Member</th>
        <td><%= f.select(:member_id, options_for_select(@members.map { |s| [s.email, s.id] } , @payment.member_id), {}, { :class => "custom-select w-auto" }) %></td>
    </tr>
    <tr>
        <th class="align-middle">Semester</th>
        <td><%= f.select(:semester_id, options_for_select(@semesters.map { |s| [s.semester_name, s.id] }, @payment.semester_id), {}, { :class => "custom-select w-auto"}) %></td>
    </tr>
    <tr>
        <th class="align-middle">Officer</th>
        <td><%= f.select(:officer_id, options_for_select(@officers.map { |s| [s.email, s.id] }, @payment.officer_id), {}, { :class => "custom-select w-auto"}) %></td>
    </tr>
    <tr>
        <th class="align-middle">Date</th>
        <td><%= f.date_select(:paymentDate,{order: [:month, :day, :year], selected: Date.today}, { :class => "custom-select w-auto"})%></td>
    </tr>
</table>
