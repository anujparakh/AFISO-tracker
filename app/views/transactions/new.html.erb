<% flash.each do |type, msg| %>
<div class="text-center full-bg bg-danger m-0">
    <p class="text-white m-0"><%=msg%></p>
</div>
<% end %>

<div class="jumbotron text-center">
    <h1 class="display-3">New Transaction</h1>
</div>

<div class="container text-center">

    <%= form_for(@transaction, :url => transactions_path, :method => "post") do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
        <%= f.submit("Add Transaction", :class => "btn btn-primary") %>
    </div>

    <% end %>
</div>