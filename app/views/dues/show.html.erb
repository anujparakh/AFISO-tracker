<div class="jumbotron text-center">
    <h1 class="display-3">Payment Information</h1>
    <a href="<%=dues_path%>" class="large-link">Back to List</a>
</div>

<div class="container text-center">
    <table class="table" summary="Member detail view">
        <tr>
            <th>Member Name</th>
            <td><%= @payment.member.name %></td>
        </tr>
        <tr>
            <th>Semester(s)</th>
            <td><%= @payment.semester_1.semester_name %>
			    <% if @payment.semester_id_2 != nil %>
				  <%=", " + @payment.semester_2.semester_name %>
				<% end %>
			</td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>$<%= @payment.payment_amount %></td>
        </tr>
        <tr>
            <th>Date</th>
            <td><%= @payment.payment_date.strftime("%B %d, %Y") %></td>
        </tr>
</table>
    <a class="btn btn-primary" href="<%= receipt_due_url(@payment) %>" role="button">Show Receipt</a>
</div>
