<%= link_to("<< Back to List", dues_path, :class => "back-link") %>

<div class="payments delete">
    <h2>Delete Dues Payment</h2>

    <%= form_for(@payment, :method => "delete") do |f| %>

    <p>Are you sure you want to permanently delete this dues payment?</p>
    <p>Payment Amount: <%= @payment.payment_amount%></p>
    <div class="form-buttons">
        <%= f.submit("Delete Dues Payment") %>
    </div>

    <% end %>
</div>
