<div class="jumbotron text-center">
    <h1 class="display-3">Semester Information</h1>
    <a href="<%=semesters_path%>" class="large-link">Back to List</a>
</div>

<div class="container text-center">
    <table class="table" summary="Member detail view">
        <tr>
            <th>ID:</th>
            <td><%= @semester.id %></td>
        </tr>
        <tr>
            <th>Semester</th>
            <td><%= @semester.semester_name %></td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td><%= @semester.start_date.strftime("%B %Y") %></td>
        </tr>
        <tr>
            <th>End Date</th>
            <td><%= @semester.end_date.strftime("%B %Y") %></td>
        </tr>
        <tr>
            <th>Dues Deadline</th>
            <td><%= @semester.dues_deadline.strftime("%B %d, %Y") %></td>
        </tr>
    </table>
</div>